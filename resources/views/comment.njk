{% extends "ind" %}

{% block content %}
<h2>Komment hozzáfűzése</h2>

<form class="form-horizontal" method="post">

  {{ csrfField }}
  
  <div class="form-group">
    <label for="comments" class="col-lg-2 control-label">Kommentek</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="3" id="comments" name="comments">{{old('comments')}}</textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}