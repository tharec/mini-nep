{% extends "ind" %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %}


{% block content %}
<h2 class="col-md-7 col-md-offset-2">ÚJ TANTÁRGY HOZZÁADÁSA</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal col-md-7 col-md-offset-2" method="post" data-toggle="validator">

  {{ csrfField }}

  <div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Tantárgy neve</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="name" name="name" placeholder="Tantárgy neve" value="{{old('name')}}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="comments" class="col-lg-2 control-label">Kommentek</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="3" id="comments" name="comments">{{old('comments')}}</textarea>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="group_name" class="col-lg-2 control-label">Csoport neve</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="group_name" name="group_name" placeholder="Csoport neve" value="{{old('group_name')}}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}